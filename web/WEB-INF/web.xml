<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- Alertes de besoin -->
    <servlet>
        <servlet-name>alertes</servlet-name>
        <servlet-class>Controller.AlerteBesoin.AlerteBesoinServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>alertes</servlet-name>
        <url-pattern>/Alertes</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>traiterAlerte</servlet-name>
        <servlet-class>Controller.AlerteBesoin.TraiterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>traiterAlerte</servlet-name>
        <url-pattern>/TraiterAlerte</url-pattern>
    </servlet-mapping>

    <!-- Banques Du Sang-->
    <servlet>
    <servlet-name>BanqueDuSang</servlet-name>
    <servlet-class>Controller.BanqueDuSang.BanqueSangController</servlet-class>
</servlet>
    <servlet-mapping>
        <servlet-name>BanqueDuSang</servlet-name>
        <url-pattern>/LesBanquesDuSang</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SupprimerBanque</servlet-name>
        <servlet-class>Controller.BanqueDuSang.SupprimerBanqueController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SupprimerBanque</servlet-name>
        <url-pattern>/SupprimerBanqueDuSang</url-pattern>
    </servlet-mapping>


    <!-- Convoi -->
    <servlet>
        <servlet-name>AjouterConvoiServlet</servlet-name>
        <servlet-class>Controller.Convoi.AjouterConvoiServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AjouterConvoiServlet</servlet-name>
        <url-pattern>/AjouterConvoi</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AfficherListConvoiServlet</servlet-name>
        <servlet-class>Controller.Convoi.AfficherListConvoiServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AfficherListConvoiServlet</servlet-name>
        <url-pattern>/AfficherListConvoi</url-pattern>
    </servlet-mapping>

</web-app>
